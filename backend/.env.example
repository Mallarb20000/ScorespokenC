# =============================================================================
# SCORESPOKEN BACKEND CONFIGURATION
# =============================================================================
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3002
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# AI Service Configuration
AI_PROVIDER=gemini
GEMINI_API_KEY=your_gemini_api_key_here
AI_MODEL=gemini-2.0-flash-exp
AI_MAX_RETRIES=3
AI_TIMEOUT=30000

# Storage Configuration
STORAGE_TYPE=memory
# Options: memory, disk, s3

# For disk storage:
TEMP_DIR=./temp

# For S3 storage (future):
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key

# File Upload Limits
MAX_FILE_SIZE=10485760
# 10MB in bytes (10 * 1024 * 1024)

# Cleanup Settings
CLEANUP_INTERVAL=3600000
# 1 hour in milliseconds

# Database Configuration (future use)
DB_TYPE=none
# DATABASE_URL=postgresql://username:password@localhost:5432/scorespoken

# Cache Configuration (future use)
CACHE_TYPE=memory
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# Rate Limiting
RATE_LIMIT_WINDOW=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX=100
# Max requests per window
RATE_LIMIT_SKIP_SUCCESS=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Feature Flags
ENABLE_CACHING=false
ENABLE_QUEUE=false
ENABLE_ANALYTICS=false
ENABLE_BATCH_PROCESSING=false